{
    "name": "hostname",
    "displayName": "hostname",
    "description": "Show hostname on status bar",
    "version": "0.0.1",
    "publisher": "innerlee",
    "license": "MIT",
    "repository": "https://github.com/innerlee/hostname",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.Hostname",
                "title": "Show hostname"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42",
        "os-name": "^2.0.1",
        "getos": "^3.1.0",
        "promisify-node": "^0.4.0"
    }
}
